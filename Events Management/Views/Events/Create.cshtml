@model Events_Management.Models.Event

@{
    ViewData["Title"] = "Contact Us";
}

<section class="mb-4 container">
    @if(ViewBag.IsSuccess)
    {
        <div class="alert alert-success alert-dismissible fade show col-md-6" role="alert">
            <strong>Successful</strong> Your message was sent successfully.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
   

    <!--Section heading-->
    <h2 class="h1-responsive font-weight-bold text-center my-4">Contact us</h2>
    <!--Section description-->
    <p class="text-center w-responsive mx-auto mb-5">
        Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
        a matter of hours to help you.
    </p>

    <div class="row">

        <!--Grid column-->
        <div class="col-md-9 mb-md-0 mb-5">
            <form asp-action="Create">

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" required/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <!--Grid column-->

                </div>
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <label asp-for="Subject" class="control-label"></label>
                            <input asp-for="Subject" class="form-control" required />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-12">

                        <div class="md-form">
                            <label asp-for="Message" class="control-label"></label>
                            <input asp-for="Message" class="form-control md-textarea" required />
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                    </div>
                </div>
                <!--Grid row-->

                <div class="form-group text-center text-md-left my-5">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

            </form>

        </div>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
                <li>
                    <i class="fas fa-map-marker-alt fa-2x"></i>
                    <p>New baneshwor, Kathmandu, Nepal</p>
                </li>

                <li>
                    <i class="fas fa-phone mt-4 fa-2x"></i>
                    <p>+ 01 234 567 89</p>
                </li>

                <li>
                    <i class="fas fa-envelope mt-4 fa-2x"></i>
                    <p>contact@dreamevents.com</p>
                </li>
            </ul>
        </div>
        <!--Grid column-->

    </div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
